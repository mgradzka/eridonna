<div class="container-fluid collection-page">
  {% paginate collection.products by 2 %}
    <div class="row my-5">
      <h1 class="text-center">{{ collection.title }}</h1>
    </div>

    {% render 'sorting' %}

    {% render 'filtering' %}
    
    <div class="row justify-content-center my-5">
    

      {% for product in collection.products %}
        {% assign image = product.featured_media.preview_image %}
        <div class="col-3 g-2">

        {% comment %}
          the card here is the same as in featured collection - it should be moved to snippets!
        {% endcomment %}
          <article class="card" style="width: 18rem;">
            <a href="{{ product.url }}">
              {% if image != blank %}
                    <img class="card-img-top" src="{{ image | img_url: 'master' }}" alt="{{ product.title }}">
                
                  {% else %}
                      {{ 'product-1' | placeholder_svg_tag: 'card-img-top' }}
              {% endif %}
              
                <div class="card-body">
                    <h3>{{ product.title }}</h3>
                    <p>{{ product.price | money_without_trailing_zeros }}</p>
                </div>
              </a>
          </article>
        </div>

      {% else %}
        <p>no matches</p>
      {% endfor %}
    </div>

    {% render 'pagination', paginate: paginate %}
  {% endpaginate %}
</div>