<!-- /templates/customers/login.liquid -->

<div class="position-relative article-template__background">
  <div class="pt-4">
    {% include 'breadcrumbs' %}
  </div>
</div>
<section class="container py-5 my-5 flex justify-content-around gap-4">

  <div>
    <div class="login-form">
      {% form 'customer_login' %}
        {% include 'form-error', form: form %}
        <h1 class="h3">Welcome back!<br>Sign in to your account</h1>
        <label for="emailAddress">Email Address</label>
        <input
          id="emailAddress"
          type="email"
          name="customer[email]"
          class="form-control rounded-0 my-2">
        <label for="password">Password</label>
        <input
          id="password"
          type="password"
          name="customer[password]"
          class="form-control rounded-0 my-2">

        <input
          type="submit"
          value="Log In"
          class="button btn-main  btn-lg w-100">
      {% endform %}

      <a
        href="#recover"
        id="forgotPassword"
        class="forgot-password mb-2">Forgot your password?</a>
    </div>
    <div id="forgot_password_form" class="forgot-password-form mb-4 d-none">
      {% form 'recover_customer_password' %}
        {% include 'form-error', form: form %}

        <div class="col-12">
          <label for="resetPassword" class="form-label mt-4">Email Address</label>
          <input
            class="form-control"
            type="email"
            name="email"
            id="resetPassword">
        </div>

        <input
          type="submit"
          value="Reset Password"
          class="button btn-secondary mt-2 btn-lg w-100">
      {% endform %}

    </div>
    <div class="flex register-form gap-2">
      <p class="">Don't have an account yet?</p>
      <a href="{{routes.account_register_url}}">Register</a>
    </div>
  </div>
  <img
    src="{{ 'jewelry.png' | asset_url }}"
    alt="Logo"
    class="img-fluid img-log">



</section>