<nav class="navbar navbar-expand-lg bg-body-tertiary fixed-top container-fluid p-3">

  <button
    class="navbar-toggler"
    type="button"
    data-bs-toggle="collapse"
    data-bs-target="#navbarNav"
    aria-controls="navbarNav"
    aria-expanded="false"
    aria-label="Toggle navigation">
    <span class="navbar-toggler-icon">
      <span id="mobile" class="material-symbols-outlined">
        menu
      </span>
    </span>

  </button>

  <a href="/">
    <img src="{{section.settings.image | img_url: 'small' }}" alt="{{section.settings.image.alt}}">
  </a>
  <div class="flex align-items-center nav-icons-mobile">
    <span class="material-symbols-outlined nav-icons">
      <a
        class="nav-link"
        href="#swym-wishlist"
        class="swym-wishlist">
        favorite
      </a>
    </span>

    <span class="material-symbols-outlined nav-icons">
      person
    </span>

    <span class="material-symbols-outlined nav-icons">
      <a class="nav-link" href="/cart">shopping_bag</a>
    </span>

    <span id="numberOfCartItem1" class="badge bg-secondary rounded-pill">0</span>

  </div>

  <div class="collapse navbar-collapse py-4" id="navbarNav">
    <ul class="navbar-nav me-auto">
      {% for link in linklists.main-menu.links %}
        {% assign child_list_handle = link.title | handleize %}

        {% if linklists[child_list_handle].links != blank %}

          <li class="nav-item dropdownn">

            <a
              class="nav-link dropdown-toggle"
              role="button"
              data-bs-toggle="dropdown"
              href="{{ link.url }}">{{ link.title }}

            </a>


            <ul class="dropdown-menu">

              {% for childlink in linklists[child_list_handle].links %}
                <li class="nav-item">
                  <a class="dropdown-item" href="{{ childlink.url }}">{{ childlink.title | escape }}
                  </a>
                </li>
              {% endfor %}

            </ul>
          </li>

        {% else %}
          <li class="nav-item">
            <a class="nav-link" href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endif %}
      {% endfor %}

      <form
        class="d-flex search-nav"
        action="/search"
        method="GET"
        role="search">
        <input
          class="form-control me-2"
          type="text"
          name="q"
          value="{{ search.terms | escape }}">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>

    {% comment %}

    <ul class="navbar-nav">
    {% if shop.customer_accounts_enabled %}
    {% if customer %}
    <li class="nav-item">
    <a class="nav-link" href="{{routes.account_url}}">Account</a>
    </li>
    <li class="nav-item">
    <a class="nav-link" href="{{routes.account_logout_url}}">Logout</a>
    </li>

    {% else %}
    <li class="nav-item">
    <a class="nav-link" href="{{routes.account_login_url}}">Login</a>
    </li>
    <li class="nav-item">
    <a class="nav-link" href="{{routes.account_register_url}}">Register</a>
    </li>

    {% endif %}
    {% endif %}

    {% endcomment %}</ul>



  <div class="flex align-items-center nav-icons-desktop ps-4">
    <span class="material-symbols-outlined ">
      <a
        class="nav-link"
        href="#swym-wishlist"
        class="swym-wishlist">
        favorite
      </a>
    </span>

    <span class="material-symbols-outlined nav-icons">
      person
    </span>


    <span class="material-symbols-outlined nav-icons shopping-bag">
      <a class="nav-link" href="/cart">shopping_bag</a>
    </span>

    <span id="numberOfCartItem2" class="badge bg-secondary rounded-pill">0</span>



  </div>



</nav>


{% schema %}
  {
    "name": "Nav",
    "class": "nav-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Navbar image"
      }
    ],

    "presets": [
      {
        "category": "Nav",
        "name": "Navbar"
      }
    ]
  }
{% endschema %}